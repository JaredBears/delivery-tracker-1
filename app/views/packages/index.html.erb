<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p>
      Know if something gets lost in the mail
    </p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a Package?
    </h2>

    <form action="/insert_package" method="post">
      <div>
        <label for="desc_box">
          Description
        </label>

        <textarea id="desc_box" name="query_desc" rows="3"></textarea>
      </div>

      <div>
        <label for="expected_box">
          Supposed to Arrive on
        </label>

        <input type="date" id="expected_box" name="query_expected">
      </div>

      <div>
        <label for="notes_box">
          Details
        </label>

        <textarea id="notes_box" name="query_notes" rows="3"></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>

<div>
  <h2>
    Waiting On
  </h2>
  <ul>
    <% @missing_packages.each do |package| %>
      <li>
        <div>
          <h3>
            <%= package.desc %>
          </h3>
          <p>
            Supposed to arrive on <%= package.expected.strftime("%A, %B %d, %Y") %>
          </p>
          <p>
            <%= package.notes %>
          </p>
          <p>
            <form action="/modify_package" method="post">
              <input type="hidden" name="query_id" value="<%= package.id %>">
              <input type="hidden" name="query_delivered" value="true" >
              <button type="submit">
                Mark as Received
              </button>
            </form>
          </p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<div>
  <h2>
    Received
  </h2>
  <ul>
    <% @received_packages.each do |package| %>
      <li>
        <div>
          <h3>
            <%= package.desc %>
          </h3>
          <p>
            Updated about <%= distance_of_time_in_words_to_now(package.updated_at) %> ago. <a href="/delete_package/<%= package.id %>">Delete</a>
          </p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
